{
  "name": "chatty-frontend",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "@loadable/component": "^5.15.2",
    "@reduxjs/toolkit": "^1.9.5",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.4.0",
    "date-fns": "^3.0.6",
    "emoji-picker-react": "^3.6.1",
    "history": "^5.3.0",
    "lodash": "^4.17.21",
    "millify": "^6.1.0",
    "msw": "0.44.2",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-contenteditable": "^3.3.6",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-loading-skeleton": "^3.3.1",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.16.0",
    "react-scripts": "5.0.1",
    "sass": "^1.67.0",
    "socket.io-client": "^4.7.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "lint:check": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "prettier:check": "prettier --check \"src/**/*.{js,jsx,json}\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,jsx,json}\"",
    "build": "cross-env CI=false react-app-rewired build",
    "test": "react-app-rewired test --coverage --forceExit --detectOpenHandles --watchAll=false"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest-canvas-mock": "^2.5.2",
    "prettier": "^3.0.3",
    "react-app-alias": "^2.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/test/*.js?(x)",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "moduleNameMapper": {
      "@components/(.*)": [
        "<rootDir>/src/components/$1"
      ],
      "@services/(.*)": [
        "<rootDir>/src/services/$1"
      ],
      "@hooks/(.*)": [
        "<rootDir>/src/hooks/$1"
      ],
      "@mocks/(.*)": [
        "<rootDir>/src/mocks/$1"
      ],
      "@pages/(.*)": [
        "<rootDir>/src/pages/$1"
      ],
      "@redux/(.*)": [
        "<rootDir>/src/redux-toolkit/$1"
      ],
      "@assets/(.*)": [
        "<rootDir>/src/assets/$1"
      ],
      "@colors/(.*)": [
        "<rootDir>/src/colors/$1"
      ],
      "@root/(.*)": [
        "<rootDir>/src/$1"
      ]
    }
  }
}
